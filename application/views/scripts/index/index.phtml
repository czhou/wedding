    <script src="/javascripts/jquery-1.10.2.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>

    <script>
    !function ($) {
        $(function(){
          // carousel demo
          $('#myCarousel').carousel()
        });
      }(window.jQuery);
      
      function submitForm(){
          var data = {
          name: $("#name").val(),
          phone: $("#phone").val(),
          number_of_attendee: $("#number_of_attendee").val(),
          room_reserve: $('input[name=room_reserve]:checked', '#myForm').val(),
          room_description: $("#room_description").val()
          };
          $.post("", data, function(rdata){
        	  alert(rdata);
        	  if(rdata=="妥！"){
            	  $("#closePop").click();
        	  }
          });
      }

    </script>
  </body>
